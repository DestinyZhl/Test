<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>ECharts</title>
    <!-- 引入 echarts.js -->

    <script src="~/Scripts/ECharts/echarts.min.js"></script>
</head>
<body>
    <!-- 为ECharts准备一个具备大小（宽高）的Dom -->
<div id="main" style="width: 600px; height: 400px;"></div>
    <button id="js_send_email">SendEmail</button>
<script type="text/javascript">
    $("#js_send_email").click(function() {

    });

    // 基于准备好的dom，初始化echarts实例
    var myChart = echarts.init(document.getElementById('main'));
    myChart.showLoading();
    // 指定图表的配置项和数据
    var option = {
        title: {
            text: '生产达成情况'
        },
        tooltip: {},
        legend: {
            data: ['产量', '目标产量']
        },
        toolbox: {
            show: true,
            feature: {
                mark: { show: true },
                dataView: { show: true, readOnly: false },
                magicType: { show: true, type: ['line', 'bar', 'stack', 'tiled'] },
                restore: { show: true },
                saveAsImage: { show: true }
            }
        },
        xAxis: {
            data: ["CNC1", "抛光1", "清洗1", "CNC2", "抛光2", "清洗2"]
        },
        yAxis: {},
        series: [{
            name: '产量',
            type: 'line',
            data: [1500, 2000, 2600, 2000, 2000, 2000]
        },
        {
            name: '目标产量',
            type: 'line',
            data: [2000, 2000, 2000, 2000, 2000, 2000]
        }]

    };
    myChart.hideLoading();
    // 使用刚指定的配置项和数据显示图表。
    myChart.setOption(option);

</script>
</body>
</html>